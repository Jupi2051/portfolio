{
  "name": "portfolio-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:web": "pnpm --filter @portfolio/web dev",
    "dev:server": "pnpm --filter @portfolio/server dev",
    "build": "pnpm run --recursive build",
    "build:web": "pnpm --filter @portfolio/web build",
    "build:server": "pnpm --filter @portfolio/server build",
    "build:packages": "pnpm --filter @portfolio/shared build && pnpm --filter @portfolio/types build",
    "preview": "pnpm --filter @portfolio/web preview",
    "start": "pnpm --filter @portfolio/server start",
    "start:server": "pnpm --filter @portfolio/server start",
    "start:web": "pnpm --filter @portfolio/web start",
    "clean": "pnpm run --recursive clean && rm -rf node_modules",
    "type-check": "pnpm run --recursive type-check"
  },
  "devDependencies": {
    "typescript": "^5.8.3"
  }
}
